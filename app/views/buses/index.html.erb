<p style="color: green"><%= notice %></p>

<h1 class="my-4">Buses</h1>

<div id="buses" class="row">
  <% @buses.each do |bus| %>
    <div class="col-md-4 mb-4">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Bus <%= bus.plate_number %></h5>
          <p class="card-text">
            <strong>Body Number:</strong> <%= bus.body_number %><br>
            <strong>Drivers:</strong> <%= bus.drivers.pluck(:name).join(', ') %>
          </p>
          <%= link_to "Show this bus", bus, class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<%= link_to "New bus", new_bus_path, class: "btn btn-success mt-4" %>

